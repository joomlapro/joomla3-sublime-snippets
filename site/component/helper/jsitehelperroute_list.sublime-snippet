<snippet>
	<content><![CDATA[/**
 * Method to get a route configuration for the ${1/(.+)/\L\1/g} view.
 *
 * @param   integer  \$catid  The id of the category.
 *
 * @return  string
 *
 * @since   $TM_VERSION
 */
public static function get${1:Plural}Route(\$catid = 0)
{
	// Initialiase variables.
	\$needles = array(
		'${1/(.+)/\L\1/g}' => array(0)
	);

	// Create the link.
	\$link = 'index.php?option=com_${TM_COMPONENT/(.+)/\L\1/g}&view=${1/(.+)/\L\1/g}';

	if (\$catid > 1)
	{
		\$link .= '&catid=' . \$catid;
	}

	if (\$item = self::_findItem(\$needles))
	{
		\$link .= '&Itemid=' . \$item;
	}

	return \$link;
}]]></content>
	<tabTrigger>jsitehelperroute_list</tabTrigger>
	<scope>source.php</scope>
</snippet>
