	<content><![CDATA[// Build the query for the ${2/(.+)/\L\1/g} list.
\$db = JFactory::getDbo();
\$db->setQuery(
	'SELECT ${1:title}'
	. ' FROM #__${TM_COMPONENT/(.+)/\L\1/g}${2:table}'
	. ' WHERE ${3:id} = ' . (int) \$this->id
);

\$result = \$db->loadResult();
]]></content>
